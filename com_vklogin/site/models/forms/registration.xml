<?xml version="1.0" encoding="utf-8"?>
<form>
	<fieldset name="default"
		label="COM_VKLOGIN_REGISTER"
	>

		<field name="name" type="text"
			description="COM_VKLOGIN_NAME_DESC"
			filter="string"
			label="COM_VKLOGIN_NAME"
			message="COM_VKLOGIN_NAME_MESSAGE"
			required="true"
			size="30"
		/>

		<field name="username" type="text"
			class="validate-username"
			description="COM_VKLOGIN_USERNAME_DECS"
			filter="username"
			label="COM_VKLOGIN_USERNAME"
			message="COM_VKLOGIN_USERNAME_MESSAGE"
			required="true"
			size="30"
			validate="username"
		/>

		<field name="email" type="text"
			class="validate-email"
			description="COM_VKLOGIN_EMAIL_DESC"
			field="id"
			filter="string"
			label="COM_VKLOGIN_EMAIL"
			message="COM_VKLOGIN_EMAIL_MESSAGE"
			required="true"
			size="30"
			unique="true"
			validate="email"
		/>
	</fieldset>
</form>